{
  "name": "sms-system",
  "version": "1.0.0",
  "description": "短信管理和转发系统",
  "main": "server/app.js",
  "scripts": {
    "dev": "nodemon server/app.js",
    "dev:client": "webpack serve --mode development",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "build": "NODE_ENV=production webpack --mode production",
    "build:analyze": "NODE_ENV=production ANALYZE=true webpack --mode production",
    "start": "NODE_ENV=production node server/app.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop sms-system",
    "pm2:reload": "pm2 reload sms-system",
    "deploy": "npm run build && npm run pm2:start"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.11.0",
    "axios": "^1.6.2",
    "core-js": "^3.35.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-compress": "^5.1.1",
    "koa-router": "^12.0.1",
    "koa-static": "^5.0.0",
    "moment-timezone": "^0.6.0",
    "mysql2": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "sequelize": "^6.35.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "compression-webpack-plugin": "^10.0.0",
    "concurrently": "^9.2.1",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "html-webpack-plugin": "^5.5.4",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  }
}